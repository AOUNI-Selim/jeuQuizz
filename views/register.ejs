<div class="row mt-5">
	<div class="col-md-8 m-auto">
		<div class="card card-body">
			<h1 class="text-center mb-3">
				 Inscription
			</h1>
			<%- include ("./partials/message"); %>
			<form action="/register" method="POST">
				<div class="input-group mb-3">
					<label class="input-group-text" for="name">Nom</label>
					<input
						type="text"
						id="name"
						name="name"
						class="form-control"
						placeholder="Enter Name"
						value="<%= typeof name != 'undefined' ? name : '' %>"
					/>
				</div>
				<div class="input-group mb-3">
					<label class="input-group-text" for="email">Email</label>
					<input
						type="email"
						id="email"
						name="email"
						class="form-control"
						placeholder="Enter Email"
						value="<%= typeof email != 'undefined' ? email : '' %>"
					/>
				</div>
				<div class="input-group mb-3">
					<label class="input-group-text" for="password">Mot de passe</label>
					<input
						type="password"
						id="password"
						name="password"
						class="form-control"
						placeholder="Create Password"
						value="<%= typeof password != 'undefined' ? password : '' %>"
					/>
				</div>
				<div class="input-group mb-3">
					<label class="input-group-text" for="password2"
						>Confirmer votre mot de passe</label
					>
					<input
						type="password"
						id="password2"
						name="password2"
						class="form-control"
						placeholder="Confirm Password"
						value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
					/>
				</div>
				<button type="submit" class="btn btn-primary btn-block">
					Inscription
				</button>
			</form>
			<p class="lead mt-4">Vous avez un compte ? <a href="/login">Connexion</a></p>
		</div>
	</div>
</div>
